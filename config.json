{
  "name": "CBus MQTT Daemon",
  "version": "1.0.0",
  "slug": "cmqttd",
  "description": "Connect a CBus network to MQTT",
  "url": "https://github.com/edc1/cmqttd",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "init": false,
  "startup": "application",
  "boot": "auto",
  "panel-icon": "mdi:server-network",
//  "image": "edc1/image-{arch}-addon-cmqttd",
  "options": {
    "log_level": "DEBUG",
    "broker_address": "",
    "broker_port": 8883,
    "broker_username": "",
    "broker_password": "",
    "broker_no_tls": false,
    "cni_address": "",
    "cni_port": 10001,
    "time_sync": 300,
    "no_clock": false},
  "schema": {
    "log_level": "list(CRITICAL|ERROR|WARNING|INFO|DEBUG)",
    "broker_address": "str",
    "broker_port": "port",
    "broker_username": "str",
    "broker_password": "password",
    "broker_no_tls": "bool",
    "cni_address": "str",
    "cni_port": "port",
    "time_sync":  "int",
    "no_clock": "bool"}
}

